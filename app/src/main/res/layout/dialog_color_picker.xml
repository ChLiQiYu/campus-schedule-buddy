<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_color_picker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择颜色"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.fjnu.schedule.view.HsvPaletteView
            android:id="@+id/view_hsv_palette"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="#FFFFFF" />

        <com.fjnu.schedule.view.HueBarView
            android:id="@+id/view_hue_bar"
            android:layout_width="28dp"
            android:layout_height="200dp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/view_color_preview"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="#FF0000" />

        <EditText
            android:id="@+id/et_hex_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:hint="#FF0000"
            android:inputType="text"
            android:maxLines="1"
            android:text="#FF0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_color_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="取消"
            android:backgroundTint="@color/outline"
            android:textColor="@color/text_primary" />

        <Button
            android:id="@+id/btn_color_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="保存"
            android:backgroundTint="@color/primary"
            android:textColor="@color/on_primary" />
    </LinearLayout>

</LinearLayout>
