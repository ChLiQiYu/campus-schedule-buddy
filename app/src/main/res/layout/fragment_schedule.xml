<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title=""
        app:titleTextColor="?attr/colorOnPrimary">

        <LinearLayout
            android:id="@+id/layout_title_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026年1月10日"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_week_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第1周 星期六"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_previous_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="上一周"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_left"
                app:tint="?attr/colorOnPrimary" />

            <TextView
                android:id="@+id/tv_current_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="第1周"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_next_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="下一周"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="更多"
                android:padding="8dp"
                android:src="@drawable/ic_more"
                app:tint="?attr/colorOnPrimary" />
        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/week_header"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/toolbar"
        android:background="?attr/colorSurface"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_header"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="时间"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_day_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周一"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周二"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/11"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周三"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/12"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_thu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周四"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/13"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周五"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/14"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周六"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/15"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周日"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/16"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/week_header"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/schedule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quick_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fab_add_course"
        android:layout_alignEnd="@id/fab_add_course"
        android:layout_marginBottom="12dp"
        android:contentDescription="快速笔记"
        android:visibility="gone"
        app:backgroundTint="?attr/colorPrimary"
        app:srcCompat="@drawable/ic_note"
        app:tint="?attr/colorOnPrimary"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:contentDescription="添加课程"
        app:backgroundTint="?attr/colorSecondary"
        app:srcCompat="@drawable/ic_add"
        app:tint="?attr/colorOnSecondary" />

</RelativeLayout>
